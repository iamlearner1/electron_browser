{
    "name": "electron-app",
    "version": "1.0.0",
    "description": "An Electron app with poll and quiz windows",
    "main": "src/main/main.js",
    "scripts": {
      "postinstall": "electron-builder install-app-deps",
      "start": "electron .",
      "rebuild": "electron-rebuild",
      "package": "electron-packager . ElectronApp --platform=win32 --arch=x64 --out=dist",
      "clean": "rm -rf node_modules dist",
      "pack": "electron-builder --dir",
      "dist": "electron-builder"
    },
    "dependencies": {
      "@electron-forge/plugin-base": "^7.6.1",
      "@ffmpeg/core": "^0.12.10",
      "@ffmpeg/ffmpeg": "^0.12.15",
      "electron-squirrel-startup": "^1.0.1",
      "electron-store": "^8.2.0",
      "ffmpeg-static-electron-forge": "^1.1.7",
      "fluent-ffmpeg": "^2.1.3",
      "machine-id": "^1.0.0",
      "node-machine-id": "^1.1.12",
      "store": "^2.0.12"
    },
    "devDependencies": {
      "electron": "^34.0.0",
      "electron-builder": "^25.1.8",
      "electron-packager": "^17.1.1"
    },
    "author": "Sunny Shiva",
    "license": "MIT",
    "keywords": [
      "electron",
      "poll",
      "quiz",
      "desktop-app"
    ],
    "engines": {
      "node": ">=16",
      "electron": "^34.0.0"
    },
    "build": {
      "appId": "com.yourcompany.kalli",
      "productName": "Kalli Screen Recorder",
      "mac": {
        "category": "public.app-category.video",
        "target": ["dmg", "zip"]
      },
      "win": {
        "target": ["nsis", "zip"]
      },
      "linux": {
        "target": ["AppImage", "deb"]
      }
      
    }
  }
  